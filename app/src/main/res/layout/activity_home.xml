<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context=".Home">

    <Button
        android:id="@+id/btn_simple_example"
        android:text="Simple example"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <Button
        android:id="@+id/btn_sign_in_example"
        android:layout_below="@id/btn_simple_example"
        android:text="@string/sign_in_screen"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <Button
        android:id="@+id/btn_adapter_example"
        android:layout_below="@id/btn_sign_in_example"
        android:text="Adapter Example"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />


</RelativeLayout>
